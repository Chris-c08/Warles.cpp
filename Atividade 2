#include <stdio.h>

int main(){
	
	int num1, num2, soma, sub, produto, divi, resto;
	
	printf("Informe o primeiro numero inteiro: ");
	scanf("%d", &num1);
	printf("Informe o segundo numero inteiro: ");
	scanf("%d", &num2);
	
	soma = num1 + num2;
	sub = num1 - num2;
	produto = num1 * num2;
	divi = num1 / num2;
	resto = num1 % num2;
	
	printf("Numero 1 \t Numero 2 \t Operacao \n");
    printf("%d \t \t %d \t \t numero1 + numeo2 = %d \n", num1, num2, soma);
    printf("%d \t \t %d \t \t numero1 - numeo2 = %d \n", num1, num2, sub);
    printf("%d \t \t %d \t \t numero1 * numeo2 = %d \n", num1, num2, produto);
    printf("%d \t \t %d \t \t numero1 / numeo2 = %d \n", num1, num2, divi);
    printf("%d \t \t %d \t \t numero1 %% numeo2 = %d \n", num1, num2, resto);


   
	return 0;
}



#include <stdio.h>
            
int main() {
  int x;

  printf("Informe um numero: ");
  scanf("%d", &x);

  if (x % 2 == 0){
    printf("O numero e par");
  } else
  {
    printf("O numero e impar");
  }

  return 0;
}


