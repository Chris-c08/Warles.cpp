LETRA A)
#include <stdio.h>
 #include <stdlib.h>           
int main() {
    printf("********** \n");
    printf("*        * \n");
    printf("*        * \n");
    printf("*        * \n");
    printf("*        * \n");
    printf("*        * \n");
    printf("*        * \n");
    printf("*        * \n");
    printf("********** \n");
    //7 por 5
    printf("  * \n");
    printf("*   * \n");
    printf("*   * \n");
    printf("*   * \n");
    printf("*   * \n");
    printf("*   * \n");
    printf("  * \n");
    //9 por 7
    printf("    * \n");
    printf("   ***\n");
    printf("  *****\n");
    printf(" *******\n");
    printf("********* \n");
    printf("    * \n");
    printf("    * \n");
    //O losangulo
    printf("      *    \n");
    printf("    *   *  \n");
    printf("   *     * \n");
    printf("  *       * \n");
    printf("   *     * \n");
    printf("    *   * \n");
    printf("      *") ;
  return 0;
}

LETRA C)
#include <stdio.h>
 #include <stdlib.h>           
int main() {
      int num1;
      int num2;
      printf("escreva o primeiro numero: ");
      scanf("%d", &num1);
      printf("escreva o segundo numero: ");
      scanf("%d",  &num2);
}

LETRA D)
#include <stdio.h>
 #include <stdlib.h>           
  int main(){
    float celcius, fahrenheit;
    printf("Informe a temperatura em celsius: ");
    scanf("%d", &celsius);
    farenheit = (celcius * 1.8) + 32;
    printf("%d", farenheit);

   }

LETRA F)
#include <stdio.h>
 #include <stdlib.h>           
  int main(){
    float raio;
    float altura;
    printf("Informe o valor do raio: ");
    scanf("%d", &raio);
    printf("Informe o valor da altura: ");
    scanf("%d", &altura);
  }
